<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#99FFE4E1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/music_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/music_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/music_num"
            android:singleLine="true"
            android:text="玫瑰花的葬礼"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/music_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/music_song"
            android:layout_alignStart="@id/music_song"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:text="许嵩"
            android:textColor="#aaa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/music_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toEndOf="@id/music_singer"
            android:layout_alignTop="@id/music_singer"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="#aaa"
            android:ellipsize="end"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/music_durtion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/music_singer"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="16sp"
            android:textColor="#aaa"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>